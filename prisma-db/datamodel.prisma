type User {
  id: ID! @unique
  fullName: String!
  email: String! @unique
  password: String!
  age: Int!
  phone: Int
  gender: Gender
  avatar: String # url to an image. might add enum to get small or big.
  confirmation: Boolean! @default(value: "false")
  Appointments: [Appointment!]
}

type Doctor {
  id: ID! @unique
  fullName: String!
  Bio: String
  email: String! @unique
  password: String!
  age: Int
  phone: Int
  gender: Gender
  avatar: String
  appointments: [Appointment!]
  specialty: DoctorSpecialty!
}

type Appointment {
  id: ID! @unique
  service: Doctor!
  client: User!
  title: String
  startTime: String! @unique
  endTime: String! @unique
  duration: AppointmentDuration!
}

enum AppointmentDuration {
  VERY_SHORT #15m
  SHORT #30m
  LONG #45m
  VERY_LONG #1h
}
enum Gender {
  MALE
  FEMALE
}
enum DoctorSpecialty {
  Generaliste
  Psychiatre
  Psychologue
  Dermatologue
  Dentiste
  Gynecologue
}
