type User {
  id: ID! @unique
  fullName: String!
  email: String! @unique
  password: String!
  age: Int!
  phone: Int
  gender: Gender
  avatar: String # url to an image
  confirmation: Boolean! @default(value: "false")
  sentMessages: [ClientMessage!]
  recievedMessages: [ServiceMessage!]
  reviews: [Review!]
  appointments: [Appointment!]
}

type Service {
  id: ID! @unique
  fullName: String!
  Bio: String
  email: String! @unique
  password: String!
  age: Int
  phone: Int
  address: String
  gender: Gender
  avatar: String
  appointments: [Appointment!]
  sentMessages: [ServiceMessage!]
  recievedMessages: [ClientMessage!]
  reviews: [Review!]
  office_hours: String
  education: String
  serviceType: ServiceType!

  doctorField: DoctorField
  lawyerField: LawyerField
}


type Appointment {
  id: ID! @unique
  service: Service!
  client: User
  clientName: String
  title: String
  start: String! @unique
  end: String! @unique
  duration: AppointmentDuration!
  local: Boolean!
  createdTime: String!
}

type Review {
  id: ID! @unique
  user: User!
  service: Service!
  title: String!
  content: String!
  rating: Int!
}

enum AppointmentDuration {
  VERY_SHORT #15m
  SHORT #30m
  LONG #45m
  VERY_LONG #1h
}
enum Gender {
  MALE
  FEMALE
}
enum DoctorField {
  Generaliste
  Psychiatre
  Psychologue
  Dermatologue
  Dentiste
  Gynecologue
}

enum LawyerField {
  Bankruptcy_Law
  Corporate_Law
  Civil_Rights_Law
  Criminal_Law
  Family_Law
}

type ClientMessage {
  id: ID! @unique
  sender: User!
  reciever: Service!
  subject: String!
  body: String!
}

type ServiceMessage {
  id: ID! @unique
  sender: Service!
  reciever: User!
  subject: String!
  body: String!
}


enum ServiceType {
  Doctor
  Lawyer
}
