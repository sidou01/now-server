type User {
  id: ID! @unique
  fullName: String!
  email: String! @unique
  password: String!
  age: Int!
  phone: Int
  gender: Gender
  avatar: String # url to an image. might add enum to get small or big.
  confirmation: Boolean! @default(value: "false")
  Appointments: [Appointment!]
  sentMessages: [ClientMessage!]
  recievedMessages: [ServiceMessage!]
  reviews: [Review!]
}

type Doctor {
  id: ID! @unique
  fullName: String!
  Bio: String
  email: String! @unique
  password: String!
  age: Int
  phone: Int
  gender: Gender
  avatar: String
  appointments: [Appointment!]
  specialty: DoctorSpecialty!
  sentMessages: [ServiceMessage!]
  recievedMessages: [ClientMessage!]
  reviews: [Review!]
}

type Appointment {
  id: ID! @unique
  service: Doctor!
  client: User
  clientName: String
  title: String
  startTime: String! @unique
  endTime: String! @unique
  duration: AppointmentDuration!
  local: Boolean!
  createdTime: String!
}

type Review {
  id: ID! @unique
  user: User!
  service: Doctor!
  title: String!
  content: String!
  rating: Int!
}

enum AppointmentDuration {
  VERY_SHORT #15m
  SHORT #30m
  LONG #45m
  VERY_LONG #1h
}
enum Gender {
  MALE
  FEMALE
}
enum DoctorSpecialty {
  Generaliste
  Psychiatre
  Psychologue
  Dermatologue
  Dentiste
  Gynecologue
}

type ClientMessage {
  id: ID! @unique
  sender: User!
  reciever: Doctor!
  subject: String!
  body: String!
}

type ServiceMessage {
  id: ID! @unique
  sender: Doctor!
  reciever: User!
  subject: String!
  body: String!
}
